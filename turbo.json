{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "lint-fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "push": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
